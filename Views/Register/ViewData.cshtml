@model FormData

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Custom styles */
        .details-container {
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 5px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .details-title {
            color: #007bff;
        }
    </style>
</head>
<body>

    <div class="container mt-4">
        <div class="details-container">
            <h2 class="details-title">Form Data Details</h2>
            <dl class="row">
                <dt class="col-sm-2">Name:</dt>
                <dd class="col-sm-10">@Model.Name</dd>

                <dt class="col-sm-2">Address:</dt>
                <dd class="col-sm-10">@Model.Address</dd>

                <dt class="col-sm-2">Number:</dt>
                <dd class="col-sm-10">@Model.Phone</dd>

                <dt class="col-sm-2">Email Id:</dt>
                <dd class="col-sm-10">@Model.Email</dd>

                <dt class="col-sm-2">State:</dt>
                <dd class="col-sm-10">@Model.State</dd>

                <dt class="col-sm-2">City:</dt>
                <dd class="col-sm-10">@Model.City</dd>
            </dl>
        </div>

        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
